print "\n";
print "the first matrix is:";
print "\n";
for($i=0;$i<$r;$i++)
{
  for($j=0;$j<$c;$j++)
  {
    print $a[$i][$j];
    print "\t";
  }
  print "\n";
}
 
print "\n";
print "the second matrix is:";
print "\n";
for($i=0;$i<$r;$i++)
{
  for($j=0;$j<$c;$j++)
  {
    print $b[$i][$j];
    print "\t";
  }
  print "\n";
}
 
